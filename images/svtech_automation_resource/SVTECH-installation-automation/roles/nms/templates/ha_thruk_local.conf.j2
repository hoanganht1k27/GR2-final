<Component Thruk::Backend>
    <peer>
      name    	= {{ system_id }}-vip
      id      	= {{ system_id }}-vip
      type    	= livestatus
      <options>
         peer 	= {{ VIP }}:6559
      </options>
    </peer>
</Component>

<configtool>
  core_type	= icinga2
  core_conf	= /etc/icinga2/icinga2.conf
  obj_check_cmd	= /run/icinga2/cmd/icinga2.cmd -v /run/icinga2/cmd/icinga2.cmd
</configtool>
