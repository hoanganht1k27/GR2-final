NFSV4 {
  Graceless = True;
}
NFS_CORE_PARAM {
    # possible to mount with NFSv3 to NFSv4 Pseudo path
    mount_path_pseudo = true;
    # NFS protocol
    Protocols = 3,4;
}
EXPORT_DEFAULTS {
    # default access mode
    Access_Type = RW;
}
EXPORT {
    # uniq ID
    Export_Id = {{ ganesha_id }};
    # mount path of Gluster Volume
    Path = "{{ ganesha_path }}";
    FSAL {
        # any name
        name = GLUSTER;
        # hostname or IP address of this Node
        hostname="{{ inventory_hostname }}";
        # Gluster volume name
        volume="data";
    }
    # config for root Squash
    Squash="No_root_squash";
    # NFSv4 Pseudo path
    Pseudo="{{ ganesha_path }}";
    # allowed security options
    SecType = "sys";
}
LOG {
    # default log level
    Default_Log_Level = DEBUG;
}
